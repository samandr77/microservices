HTTP_PORT=8081
POSTGRES_DSN=postgres://postgres:dev@pg:5432/postgres?sslmode=disable
POSTGRES_MAX_CONNS=50
SUPPORT_EMAIL=user@example.com
USER_SERVICE_URL=http://user-service:8080
LOG_LEVEL=info

# JWT Configuration (RS256 - Asymmetric)
JWT_PRIVATE_KEY=""
JWT_PUBLIC_KEY=""

JWT_ACCESS_TOKEN_EXPIRY=12h
JWT_REFRESH_TOKEN_EXPIRY=24h

OTP_CODE_LENGTH=6
OTP_CODE_TTL=2m
OTP_SEND_LIMIT=2
OTP_SEND_PERIOD=10m
OTP_SEND_BLOCK_TIME=15m
OTP_CHECK_LIMIT=3
OTP_CHECK_PERIOD=10m
OTP_CHECK_BLOCK_TIME=60m
SUPPORT_LINK=https://support.blago.direct
JOB_DELETE_CODE_INTERVAL=1h
REFRESH_TOKEN_EXPIRE_SECONDS=2592000
TOKEN_CLEANUP_INTERVAL=720h

# Kafka Configuration
KAFKA_BROKERS=localhost:9092,kafka:9092
KAFKA_NOTIFICATION_TOPIC=send-notifications

# TLS / mTLS Configuration
TLS_SERVER_CERT=/app/certs/server.crt
TLS_SERVER_KEY=/app/certs/server.key
TLS_CA_CERT=/app/certs/ca.crt
TLS_CLIENT_CERT=/app/certs/client.crt
TLS_CLIENT_KEY=/app/certs/client.key
MTLS_ENABLED=false

# Sber ID Configuration (IFT Test Environment)
SBER_ID_BASE_URL=https://oauth-ift.sber.ru
SBER_ID_TOKEN_URL=https://oauth-ift.sber.ru/ru/prod/tokens/v2/oidc
SBER_ID_USERINFO_URL=https://oauth-ift.sber.ru/ru/prod/sberbankid/v2.1/userinfo
SBER_ID_CLIENT_ID=your-sber-id-client-id-here
SBER_ID_CLIENT_SECRET=
SBER_ID_REDIRECT_URI=http://localhost:8081/api/v1/auth/sberid/callback
SBER_ID_SCOPE=openid email mobile name birthdate gender
SBER_ID_TIMEOUT=10s
SBER_ID_RETRY_ATTEMPTS=3

# Sber ID mTLS Configuration (always enabled)
SBER_ID_CA_CERT=/app/certs/sberid-ca.pem
SBER_ID_CLIENT_CERT=/app/certs/client_cert.crt
SBER_ID_CLIENT_KEY=/app/certs/private.key
